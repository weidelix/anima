{
	"include": ["./**/*"],

  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "../dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  }
}